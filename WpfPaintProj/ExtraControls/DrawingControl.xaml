<UserControl x:Class="WpfPaintProj.ExtraControls.DrawingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPaintProj.ExtraControls"
             xmlns:extra="clr-namespace:WpfPaintProj.OwnShapes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="scrollViewer" x:FieldModifier="private" HorizontalScrollBarVisibility="Auto" >
        <Canvas x:Name="canvas" x:FieldModifier="private" 
                Background="DarkGray" Width="100" Height="100" ClipToBounds="True">
            <extra:Rhomb Width="50" Height="50" Fill="Aqua" Stroke="Black"/>
        </Canvas>
    </ScrollViewer>
</UserControl>
